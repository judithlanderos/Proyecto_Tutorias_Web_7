<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E8F5E9"> <!-- Fondo verde claro -->

    <Button
        android:id="@+id/btn_altas"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="irAAltas"
        android:text="Altas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#66BB6A"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bajas"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#81C784"
        android:elevation="6dp"
        android:onClick="irABajas"
        android:text="Bajas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_altas" />

    <Button
        android:id="@+id/btn_cambios"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="irACambios"
        android:text="Cambios"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#A5D6A7"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bajas" />

    <Button
        android:id="@+id/btn_consultas"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="irAConsultas"
        android:text="Consultas"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cambios" />

    <Button
        android:id="@+id/btn_trigger"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#388E3C"
        android:elevation="6dp"
        android:onClick="irATrigger"
        android:text="Trigger"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_consultas" />

    <Button
        android:id="@+id/btn_vista"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="irAVista"
        android:text="Vista"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#66BB6A"
        android:layout_marginTop="12dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_trigger" />

    <Button
        android:id="@+id/btn_procedimiento_funcion"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#388E3C"
        android:elevation="6dp"
        android:onClick="irAProFun"
        android:text="Procedimiento Función"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_vista" />

    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#388E3C"
        android:elevation="6dp"
        android:onClick="cerrarSesion"
        android:text="Cerrar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_procedimiento_funcion" />




</androidx.constraintlayout.widget.ConstraintLayout>