<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_Tutorias_Web_7"
        tools:targetApi="23">

        <!-- Establecer ActivityLogin como la actividad principal -->
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityLogin"
            android:exported="true"> <!-- Especificar android:exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityAltas" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityBajas" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityCambios" android:exported="true"/>
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityConsultas" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityTrigger" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityVista" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityProcedimientoFuncion" android:exported="true" />
        <activity android:name="com.example.proyecto_tutorias_web_7.ActivityRegistro" android:exported="true" />

        <!-- MainActivity sin el intent-filter MAIN -->
        <activity android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>